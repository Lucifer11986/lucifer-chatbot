
{
  "name": "lucifer-chatbot",
  "version": "1.0.0",
  "description": "A modular Twitch Chatbot combining the simplicity of Streamlabs Chatbot with the power of Streamer.bot.",
  "main": "main.js",
  "author": "Lucifer",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:win": "npm run build:resources && electron-builder --win",
    "build:resources": "npm run build:frontend && npm run install:backend",
    "build:frontend": "npm --prefix ../frontend install && npm --prefix ../frontend run build",
    "install:backend": "npm --prefix ../backend install --omit=dev",
    "postinstall": "electron-builder install-app-deps",
    "prebuild": "npm run build:resources"
  },

  "dependencies": {
    "axios": "^1.7.0",
    "electron-store": "^9.0.0"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "cross-env": "^7.0.3"
  },

  "build": {
    "appId": "de.lucifer.chatbot",
    "productName": "Lucifer Chatbot",
    "files": [
      "main.js",
      "preload.js",
      "node_modules/",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraResources": [
      { "from": "../backend", "to": "backend" },
      { "from": "../frontend/dist", "to": "frontend" }
    ],
    "mac": { "category": "public.app-category.utilities" },
    "win": { "target": "nsis", "icon": "assets/icon.ico" },
    "linux": { "target": "AppImage", "icon": "assets" }
  }
}


